{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "gcc.exe - Compilar e Depurar arquivo ativo",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/raylib/w64devkit/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Habilitar a formatação perfeita para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: gcc.exe build active file"
        }
    ]
}